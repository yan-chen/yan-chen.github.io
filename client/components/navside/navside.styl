.yy-navbar-aside
  min-width 15rem !important
  width 15rem
  position fixed
  top 0
  right 0
  bottom 0
  z-index 100
  background #fff
  font-size 1.8rem
  padding 1rem

.yy-navbar-aside:focus
  outline none

.yy-navbar-aside .nav > li
  padding 0.5rem


.yy-navbar-aside .nav > li.hover
  background #5a5a5a
  color #fff

.yy-navbar-aside .nav > li > a
  padding 0.6rem 1rem
  cursor pointer

.yy-navbar-aside .nav > li.active a
  color #fff
  background #5a5a5a

.yy-navbar-aside .nav > li:hover a
  background #5a5a5a
  color #fff

.animate-if.ng-enter
  -webkit-transition 0.5s linear all
  -moz-transition 0.5s linear all
  -ms-transition 0.5s linear all
  -o-transition 0.5s linear all
  transition 0.5s linear all


.animate-if.ng-leave
  -webkit-transition 0s linear all
  -moz-transition 0s linear all
  -ms-transition 0s linear all
  -o-transition 0s linear all
  transition 0s linear all


.animate-if.ng-enter
  max-width 0
  opacity 1


.animate-if.ng-enter.ng-enter-active
  max-width 100%
  opacity 1


.animate-if.ng-leave
  max-width 100%
  opacity 1


.animate-if.ng-leave.ng-leave-active
  max-width 0
  opacity 1
