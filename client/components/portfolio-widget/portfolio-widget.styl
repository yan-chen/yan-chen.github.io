.portfolio-demo-modal
  min-width 33rem
  width 90%
  max-width 100rem
  margin 0 auto
  max-height 90%
  margin-top 5rem
  font-size $text-3x

.portfolio-demo-modal .modal-dialog
  width 100%
  height 100%

.portfolio-demo-modal .modal-content
  padding 0

.portfolio-demo-modal .modal-content .modal-header
  padding 2rem 3rem

.portfolio-demo-modal .modal-content .modal-header i
  font-size $text-5x
  padding 1.5rem
  margin-top -1rem

.portfolio-demo-modal .modal-content .modal-body
  padding 3rem
  overflow auto
  width 100%

.portfolio-demo-modal .modal-content .modal-body img
  max-width 100%
  min-width 45rem





