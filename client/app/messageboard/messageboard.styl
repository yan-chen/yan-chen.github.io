.yy-container.messageboard-container

.yy-container.messageboard-container .messageboard-title
  padding 3rem
  color $yy-orange-heavy
  margin-bottom 3rem

.yy-container.messageboard-container .message-user-info
  margin-bottom 2rem


.yy-container.messageboard-container .message-user-info .input-wrapper
  display inline-block
  width 50%
  min-width 30rem
  margin 0.8rem 0 0




.yy-container.messageboard-container ul
  list-style none

.yy-container.messageboard-container ul li
  float left
  width 33%
  padding 0 2rem
  margin-bottom 4rem
  display inline-block
  position relative
  @media screen and (min-width: $screen-lg-min)
    width 25%
  @media screen and (max-width: $screen-sm)
    width 100%
    max-width 40rem
    margin 0 auto


.yy-container.messageboard-container ul li:hover
  transform scale(1.3) rotate(0deg)

.yy-container.messageboard-container ul li .sticky-note-block
  text-decoration none
  color #000
  background #ffc
  display block
  width 100%
  height 15em
  padding 1em
  box-shadow 5px 5px 7px rgba(180,180,180,1)


.yy-container.messageboard-container ul li .sticky-note-block.sticky-note-block-odd
  transform rotate(3deg)
  background $yy-blue




.yy-container.messageboard-container ul li .sticky-note-block.sticky-note-block-even
  transform rotate(-5deg)
  background $yy-green-light

.yy-container.messageboard-container ul li .sticky-note-content
  font-family  'Handlee', cursive


  /*---- source from http://creative-punch.net/2014/02/create-css3-post-it-note/ ------*/
.yy-container.messageboard-container ul li .pin
  background-color  #aaa
  display  block
  height  32px
  width  2px
  position  absolute
  left  50%
  top  -15px
  z-index  1
  position absolute

.yy-container.messageboard-container ul li .pin:after
  background-color #d94117
  background-image  radial-gradient(25% 25%, circle, hsla(0,0%,100%,.3), hsla(0,0%,0%,.3))
  border-radius  50%
  box-shadow  inset 0 0 0 1px hsla(0,0%,0%,.1), inset 3px 3px 3px hsla(0,0%,100%,.2), inset -3px -3px 3px hsla(0,0%,0%,.2),  23px 20px 3px hsla(0,0%,0%,.15)
  content  ''
  height  15px
  left  -6px
  position  absolute
  top  -15px
  width  15px

.yy-container.messageboard-container ul li .pin:before
  background-color  hsla(0,0%,0%,0.1)
  box-shadow  0 0 .25em hsla(0,0%,0%,.1)
  content  ''
  height  24px
  width  2px
  left  0
  position  absolute
  top  8px
  transform  rotate(57.5deg)
  transform-origin  50% 100%






