//
// Font Awesome Fonts
//

@font-face
  font-family 'FontAwesome'
  src url('../bower_components/font-awesome/fonts/fontawesome-webfont.eot?v=4.1.0')
  src url('../bower_components/font-awesome/fonts/fontawesome-webfont.eot?#iefix&v=4.1.0') format('embedded-opentype')
  url('../bower_components/font-awesome/fonts/fontawesome-webfont.woff?v=4.1.0') format('woff')
  url('../bower_components/font-awesome/fonts/fontawesome-webfont.ttf?v=4.1.0') format('truetype')
  url('../bower_components/font-awesome/fonts/fontawesome-webfont.svg?v=4.1.0#fontawesomeregular') format('svg')
  font-weight normal
  font-style normal

//
// App-wide Styles
//
html, body
  font-family "Lato", sans-serif
  font-size 10px
  @media screen and (max-width: 767px)
    font-size 8px

body.isAsideOpen
  overflow hidden

body.isAsideOpen .ui-view-container
  position relative
  margin-right 15rem

body.isAsideOpen .ui-view-fade.hidden
  display block !important
  background rgba(0, 0, 0, .6)
  z-index 5
  position: absolute
  left 0
  right 15rem
  top 0
  bottom 0
  overflow hidden

.ui-view-container.gallery-view
  background #efefef

.yy-container
  width 80%
  max-width 120rem
  margin 0 auto
  clear both
  font-size 1.6rem



btn(border-color, bg-color, font-color)
  border-color border-color
  background bg-color
  color font-color

.btn.btn-primary-transparent
  btn(#336caf, transparent, #336caf)

.btn.btn-primary-transparent:hover
  btn(#336caf, #336caf, #fff)

.btn.btn-primary-transparent:focus
  btn(#336caf, #336caf, #fff)

.btn.btn-primary-transparent:active
  btn(#336caf, #336caf, #fff)

.btn.btn-primary-transparent:visited
  btn(#336caf, #336caf, #fff)

.btn.btn-white
  btn(#fff, #fff, #000)

.btn.btn-primary-transparent:focus
  btn(#fff, #fff, #000)
  outline none

.btn.btn-primary-transparent:visited
  btn(#fff, #fff, #000)

.margin-0
  margin 0

.padding-0
  padding 0

.padding-15-lr
  padding 0 1.5rem

.browserupgrade
  background #ccc
  color #000
  margin 0.2em 0
  padding 0.2em 0

.float-left
  float left

.float-right
  float right

.text-left
  text-align left

.text-right
  text-align right

.text-red
  color #ff0000

.text-black
  color #000

.text-xs
  font-size 1.2rem
.text-1x
  font-size 1.6rem
.text-2x
  font-size 2.0rem

.full-width
  width 100%

.relative
  position relative

/* creamy color theme */
$yy-pink = #f9c2ce
$yy-pink-light = #FBE0E6
$yy-yellow = #fbcd34
$yy-blue = #66b9d2
$yy-blue-light = #AFDDE8
$yy-orange = #f78d35
$yy-orange-pale = #DC9A6B
$yy-orange-pale-light = #EECCB2
$yy-orange-heavy = #B36A42
$yy-green-bright = #3dd17f
$yy-green-light = #b5d5c3
$yy-green-purple = #6b3271
$yy-red = #ff0000
$yy-gray-light = #eeeeee


/* for toolbar in all yy-container*/
.yy-container .yy-toolbar
  padding 1rem 1rem 0.5rem 1rem
  border-bottom solid $yy-orange-pale-light 3px
  margin-bottom 3rem
  vertical-align bottom

.yy-container .yy-toolbar .tool-icon
  color $yy-orange-pale
  margin-left 2rem
  cursor pointer

.yy-container .yy-toolbar .tool-icon.active
  color $yy-orange-heavy

.yy-container .yy-toolbar .tool-icon i
  font-size 2.3rem

.yy-container .yy-toolbar .tool-icon:hover
  color $yy-orange-heavy
