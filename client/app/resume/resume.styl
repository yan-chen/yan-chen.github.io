.icon-lang
  width 2rem
.about-me-container
  padding-top 3rem

.about-me-container .yy-name-card
  padding-bottom 3rem
  text-align right
  padding-right 5%

.about-me-container .yy-name-card .yy-name-text
  font-size 3.5rem
/*font-weight bolder*/

.about-me-container .media-icon-group i.fa
  color #DC9A6B
  margin-right 0.5rem

.about-me-container .media-icon-group i.fa:hover
  color #B36A42
  transform scale(1.3,1.3)

