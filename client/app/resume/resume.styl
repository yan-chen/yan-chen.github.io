.resume-container .yy-info-container
  width 100%
  background #fff
  transform rotate(-1deg)
  -moz-transform rotate(-1deg)
  -webkit-transform rotate(-1deg)
  -o-transform rotate(-1deg)
  -moz-box-shadow 0 0 1.5rem #DDD
  -webkit-box-shadow 0 0 15px #CCC
  box-shadow 0 0 1.5rem #CCC
  border 0.1rem solid #d3d3d3
  margin 1rem 0 3rem
  padding 2rem
  position relative

.resume-container .yy-info-container.previous-info
  width 100%
  background #fff
  transform rotate(0deg)
  -moz-transform rotate(0deg)
  -webkit-transform rotate(0deg)
  -o-transform rotate(0deg)
  -moz-box-shadow 0 0 1.5rem #DDD
  -webkit-box-shadow 0 0 15px #CCC
  box-shadow 0 0 1.5rem #CCC
  border 0.1rem solid #d3d3d3
  margin 1rem 0 3rem
  padding 2rem
  position relative


.resume-container .yy-info-containerafter
  content ""
  background #fff
  width 99%
  height 99%
  margin 0 auto
  position absolute
  z-index -1
  top 0
  left 0.4rem
  transform rotate(1deg)
  -moz-transform rotate(1deg)
  -webkit-transform rotate(1deg)
  -o-transform rotate(1deg)
  -moz-box-shadow 0 0 2rem #DDD
  -webkit-box-shadow 0 0 20px #CCC
  box-shadow 0 0 2rem #CCC
  border 0.1rem solid #ddd


.resume-container .yy-info-container-title
  margin-left 2rem

.resume-container .yy-info-sub-title
  text-align left
  @media only screen and (min-width 768px)
      text-align right



.resume-container .admin-login-btn
  @media only screen and (min-width 768px)
    margin-left 2rem
    cursor pointer



.resume-container .work-logo-thumb
  max-width 10rem
  max-height 10rem
  border none
  padding 1rem

