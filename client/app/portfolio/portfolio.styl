/*-----------------------*/

.portfolio-container .portfolio-greeting
  padding 5rem 2rem 3rem
  color $yy-orange-heavy
  line-height 2.2rem

.portfolio-container .section-title
  font-size $text-3x
  font-weight bold
  padding 0.8rem 3rem
  background-color $yy-orange-pale-light
  position relative
  width 100%
  min-width 25rem
  margin 3rem 1rem 1remx -2rem
  color #555
  text-shadow 0px 1px 1px #fff
  -webkit-box-shadow 0px 1px 4px #888
  -moz-box-shadow 0px 1px 4px #888
  box-shadow 0px 1px 4px #888

.portfolio-container .section-title:before
  content ' '
  position absolute
  width 5rem
  height 0
  left -3rem
  top 1.3rem
  border-width 2rem 1rem
  border-style solid
  border-color $yy-orange-pale-light $yy-orange-pale-light  $yy-orange-pale-light transparent

.portfolio-container .section-title:after
  content ' '
  position absolute
  width 0
  height 0
  left 0
  top 100%
  border-width .7rem 1rem
  border-style solid
  border-color $yy-orange-pale $yy-orange-pale transparent transparent

/*----------------------*/
.portfolio-mockup-container
  padding 3rem 0

.portfolio-mockup-container .mockup-title
  font-size $text-3x
  padding 1rem

.portfolio-mockup-container .demo-container
  max-width 80rem
  margin 0 auto

.portfolio-mockup-container .demo-container.todo-container
  background #eee

.portfolio-mockup-container .demo-container.todo-container .nav-tabs
  background #fff

.portfolio-mockup-container .demo-container.todo-container .nav-tabs > li.active > a
  background #eee

.portfolio-mockup-container .demo-container.widget-container
  background #eee
  padding 2rem

.portfolio-mockup-container .demo-container.widget-container .ao-widget .ao-date,
.portfolio-mockup-container .demo-container.widget-container .pp-widget .pp-widget-right
  background #fff

.portfolio-mockup-container .demo-container.widget-container .ao-widget .ao-date:after
  bottom -1.8rem
  border-top-color white
